<% @title = "Create Universe" %>
<p>Begin creating your character!</p>

    <%= form_for(@universe) do |f| %>



        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <%= f.label :special_rules %>
        <%= f.text_area :special_rules %>
        <%= f.label :pantheon %>
        <%= f.text_area :pantheon %>



      <%= f.submit "Create universe", id: "submit" %>

    <% end %>

