<% @title = "Items" %>
<table class="table">
  <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  <% @item.each do |item| %>
    <tr>
      <td><%= link_to item.name, item %></td>
      <td><%= link_to "Edit", edit_item_path(item) %></td>
