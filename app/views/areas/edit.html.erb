<% @title = "Edit Area" %>
<p><%= @area.attributes.inspect %></p>
<%= form_for(@area) do |f| %>
  <%#= render 'shared/character_error_messages' %>

  <div class="form-row">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%#= f.label :area_type %>
    <%#= f.select(
      :area_type,
      options_for_select(Area.area_types, @area.area_type),
      {prompt: :select, :selected => params[:area_type]})%>

    <%= f.label :universe_id %>
    <%= collection_select(
      :area,
      :universe_id,
      Universe.all,
      :id,
      :universe_name_for_lists,
      prompt: true) %>

    <%= f.label :name, "Belongs to" %>
    <%= collection_select(
      :area,
      :id,
      Area.all,
      :id,
      :area_name_for_lists,
      prompt: true) %>

    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :environment %>
    <%= f.text_area :environment %>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <%= f.label :map %>
    <%= f.text_field :map %>

  </div>

  <%= f.submit "Save Edits", id: "submit" %>

<% end %>
