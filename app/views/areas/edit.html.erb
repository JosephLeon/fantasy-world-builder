<% @title = "Edit Area" %>
<%= form_for(@area) do |f| %>
  <%#= render 'shared/character_error_messages' %>

  <div class="form-row">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :environment %>
    <%= f.text_field :environment %>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
    <%= f.label :map %>
    <%= f.text_field :map %>

    <%= f.label :universe_id %>
    <%= collection_select(
      :area,
      :universe_id,
      Universe.all,
      :id,
      :universe_name_for_lists,
      prompt: true) %>
  </div>

  <%= f.submit "Create Area", id: "submit" %>

<% end %>
