<% if @universe.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <p>The form contains <%= pluralize(@universe.errors.count, "error") %>.</p>
    </div>
    <ul>
      <% @universe.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
