<% @title = "Characters" %>

<table class="table">
  <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  <% @character.each do |character| %>
    <tr>
      <td><%= link_to character.name, character %></td>
      <td><%= link_to "Edit", edit_character_path(character) %></td>
      <td><%= link_to "Remove", character, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
